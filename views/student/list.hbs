<h3><a class="btn btn-secondary" href="/student">Create new</a>
	Student List</h3>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Full Name</th>
			<th>Email</th>
			<th>number</th>
			<th>City</th>
		</tr>
	</thead>
	<tbody>
		{{#each list}}
			<tr>
				<td>{{this.fullName}}</td>
				<td>{{this.email}}</td>
				<td>{{this.number}}</td>
				<td>{{this.city}}</td>
				<td>
					<a
						class="btn btn-primary btn-sm"
						href="/student/{{this.id}}"
					>Edit</a>
					<a
						class="btn btn-primary btn-sm"
						href="student/delete/{{this.id}}"
						onclick="return confirm('are you sure?');"
					>Delete</a>
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>